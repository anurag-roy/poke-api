{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch src/index.ts",
    "build": "deno run -A https://deno.land/x/lume@v1.7.2/ci.ts",
    "serve": "deno task build -s"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@18.0.0"
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "useTabs": false,
      "indentWidth": 4,
      "lineWidth": 100
    }
  }
}
